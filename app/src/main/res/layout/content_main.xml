<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/buttonMaps"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:text="@string/menu_maps"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfile"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfile" />

    <Button
        android:id="@+id/buttonFriends"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:text="@string/menu_Friends"
        app:layout_constraintStart_toStartOf="@+id/buttonScan"
        app:layout_constraintTop_toBottomOf="@+id/buttonScan" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:onClick="@string/navigation_drawer_open"
        android:text="@string/menu_Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/menu_scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/points"
        android:layout_width="82dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="345"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:text="Playfit Points"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points" />

    <Button
        android:id="@+id/buttonShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Shop"
        app:layout_constraintEnd_toEndOf="@+id/buttonMaps"
        app:layout_constraintStart_toStartOf="@+id/buttonFriends"
        app:layout_constraintTop_toBottomOf="@+id/buttonMaps" />
</android.support.constraint.ConstraintLayout>